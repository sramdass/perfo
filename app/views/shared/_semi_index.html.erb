<h2> <%= model_name %>&nbsp; list </h2>
<% source = model_name.constantize %>

<table class = 'datatable_full'>
  <thead>
    <tr>
  	  <% columns.each do |col| %>
  	    <th> <%= col.humanize %> </th>
  	  <% end %>
  	  <th> Actions </th>
    </tr>
  </thead>
  <tbody>
  	<% source.all.each do |obj| %>
  	  <tr>
        <% columns.each do |col| %>
	      <td> <%= obj.send(col) %> </td>
        <% end %>
        <td> 
	      <%= link_to obj, :class => 'btn btn-mini btn-info' do %>
            <i class="icon-file icon-white"> </i>
          <% end %>
	   	  <%= link_to edit_link(obj), :class => 'btn btn-mini btn-warning' do %>
            <i class="icon-pencil icon-white"> </i>
          <% end %>        
	   	  <%= link_to obj, :class => 'btn btn-mini btn-danger',:confirm => 'Are you sure?', :method => :delete do %>
            <i class="icon-trash icon-white"> </i>
          <% end %>                      
        </td>
      </tr>
    <% end %>
  </tbody>
</table>


