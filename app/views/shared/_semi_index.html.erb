<h2> <%= model_name %>&nbsp; list </h2>
<% source = model_name.constantize %>

<% if model_name == "Section" %>
<div class="span3">	
  <table class = 'datatable_full'>
    <thead>
      <tr>
  	  <th>Name</th>
  	  <th>Department</th>
  	  <th>Batch</th>
      <th> Actions </th>
      </tr>
    </thead>
    <tbody>
    	<% Section.all.each do |sec|%>
    	  <tr>
          <td> <%= sec.name %> </td>
          <td> <%= sec.department.name %> </td>
          <td> <%= sec.batch.name %> </td>
          <td>
  	          <%= link_to sec, :class => 'btn btn-mini btn-info' do %>
                <i class="icon-file icon-white"> </i>
              <% end %>
  	     	  <%= link_to edit_section_path(sec), :class => 'btn btn-mini btn-warning' do %>
                <i class="icon-pencil icon-white"> </i>
              <% end %>        
  	     	  <%= link_to sec, :class => 'btn btn-mini btn-danger',:confirm => 'Are you sure?', :method => :delete do %>
                <i class="icon-trash icon-white"> </i>
              <% end %>                      
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>  
<% else %>
  <table class = 'datatable_full'>
    <thead>
      <tr>
    	  <% columns.each do |col| %>
    	    <th> <%= col.humanize %> </th>
    	  <% end %>
    	  <th> Actions </th>
      </tr>
    </thead>
    <tbody>
    	<% source.all.each do |obj| %>
    	  <tr>
          <% columns.each do |col| %>
  	      <td> <%= obj.send(col) %> </td>
          <% end %>
          <td> 
  	      <%= link_to obj, :class => 'btn btn-mini btn-info' do %>
              <i class="icon-file icon-white"> </i>
            <% end %>
  	   	  <%= link_to edit_link(obj), :class => 'btn btn-mini btn-warning' do %>
              <i class="icon-pencil icon-white"> </i>
            <% end %>        
  	   	  <%= link_to obj, :class => 'btn btn-mini btn-danger',:confirm => 'Are you sure?', :method => :delete do %>
              <i class="icon-trash icon-white"> </i>
            <% end %>                      
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>


