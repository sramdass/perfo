<div class="span12">
  <%= simple_form_for @tenant, :url => activate_tenant_path(@tenant, :key => params[:key]), :method => :post, :html => {:class => 'form-horizontal' } do |f| %>
    <legend> Account Activation </legend>
    <fieldset>
      <%= f.input :subdomain, :required => true %>    	    	
      <%= f.input :admin_login, :hint => "No spaces allowed", :required => true %>
      <%= f.input :password, :required => true %>
      <%= f.input :password_confirmation, :required => true %>
      <div class="form-actions">
    	  <%= render 'shared/buttons', :buttons => {'submit' => "Activate" }%>
      </div>  
    </fieldset>
  <% end %>
</div>


