  <%= simple_form_for @department, :html => { :class => 'form-horizontal' } do |f| %>
  <legend> New Department </legend>
    <%= render 'department_fields', :f => f %>
    <div class="form-actions">
  	  <%= render 'shared/buttons', :obj => @department, :buttons => {'submit' => "Create",  "create_and_add" => "Create and Repeat", "cancel" => "Cancel" }%>
    </div>  
  <% end %>
<%= render 'shared/controller_action_buttons', :obj => @department, :action => "new" %>  
</div>
<div class="span3">
  <%= render 'shared/semi_index', :model_name => "Department",
																:columns => ['name', 'code'] %>
</div>