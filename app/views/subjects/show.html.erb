<%= render 'shared/de_nav_links', :active => "subjects" %>
<div class="span9">
	<legend><%= @subject.name %> </legend>
  <table class="table table-striped">
    <tbody>
      <tr>
        <td>Name</td>
        <td><%= @subject.name %></td>
      </tr>
      <tr>
        <td>Short Name</td>
        <td><%= @subject.short_name %></td>
      </tr>
      <tr>
        <td>Code</td>
        <td><%= @subject.code %></td>
      </tr>
      <tr>
        <td>Type</td>
        <td><%= @subject.lab ? "Practicals" : "Theory" %></td>
      </tr>      
    </tbody>  
  </table>
  <%= render 'shared/controller_action_buttons', :obj => @subject, :action => "show" %>      
</div>