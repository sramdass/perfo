<%= render 'shared/de_nav_links',:active => "college" %>
<div class="span9">
	<legend><%= @institution.name %> </legend>
  <table class="table table-striped">
    <tbody>
      <tr>
        <td>Name</td>
        <td><%= @institution.name %></td>
      </tr>
      <tr>
        <td>Type</td>
        <td><%= @institution.tipe %></td>
      </tr>
      <tr>
        <td>CEO</td>
        <td><%= @institution.ceo %></td>
      </tr>
      <tr>
        <td>Address</td>
        <td><%= @institution.address %></td>
      </tr>            
      <tr>
        <td>Registered Address</td>
        <td><%= @institution.registered_address %></td>
      </tr>         
      <tr>
        <td>URL</td>
        <td><%= link_to "http://#{@institution.subdomain}.perfo.in", institution_root_path %></td>
      </tr>                
    </tbody>  
  </table>
  <div class="row">
    <div class="span9 form-actions">
   	  <%= link_to institution_edit_path, :class => 'btn btn-large btn-success' do %>
        <i class="icon-pencil icon-white"> </i> <strong> Edit this College </strong>
      <% end %>         
   	  <%= link_to @institution, :class => 'btn btn-large btn-danger',:confirm => 'Are you sure?', :method => :delete do %>
        <i class="icon-remove icon-white"> </i> <strong> Delete this College </strong>
      <% end %>          
    </div>
  </div>  
</div>