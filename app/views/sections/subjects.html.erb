<% @semesters = Semester.all %>
<% @batches = Array.new if !@batches %>
<% @sections = Array.new if !@sections %>
<%= render 'shared/de_nav_links', :active => "associate_semesters" %>
<div class="span9">
  <%= render 'shared/de_semesters_nav_pills', :active => "subjects"%>
  <%= render 'selectors/form', :target_url => '/sections/subjects' %>
  <span id = "ajax_subjects_form">  
    <% if @section && @semester %>
      <%= render 'subjects_form'%>
    <% else %>
      <strong> Select the required semester and the section </strong>
    <% end %>
  </span>  
</div>

