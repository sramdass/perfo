<%= render 'shared/de_nav_links', :active => "school_types" %>
<div class='span9'>
<legend> School Types </legend>
<table class = 'datatable_full'>
<thead>
  <tr>
  	<th> School Type </th>
  	<th> Description </th>
  	<th> Actions </th>
  </tr>
</thead>
<tbody>
  <% @school_types.each do |school_type| %>
    <tr>
      <td> <%= link_to school_type.name, school_type %> </td>
	  <td> <%= school_type.description %> </td>
	  <td>
  	    <%= link_to school_type, :class => 'btn btn-mini btn-info' do %>
          <i class="icon-file icon-white"> </i> View
        <% end %>
   	    <%= link_to edit_school_type_path(school_type), :class => 'btn btn-mini btn-inverse' do %>
          <i class="icon-pencil icon-white"> </i> Edit
        <% end %>          
   	    <%= link_to school_type, :class => 'btn btn-mini btn-danger',:confirm => 'Are you sure?', :method => :delete do %>
          <i class="icon-trash icon-white"> </i> Delete
        <% end %>   
      </td>    
	</tr>
  <% end %>
</tbody>
</table>
<%= render 'shared/controller_action_buttons', :obj => SchoolType.new, :action => "index" %>
</div>


